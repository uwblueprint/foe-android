<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.blueprint.foe.beetracker.HomePageActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_home_illustration"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome"
                    android:layout_alignTop="@id/home_imageview"
                    android:layout_alignStart="@id/home_imageview"
                    android:layout_alignEnd="@id/home_imageview"
                    android:paddingTop="@dimen/big_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="Welcome!" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/home_imageview"
                    android:layout_below="@id/welcome"
                    android:layout_alignStart="@id/home_imageview"
                    android:layout_alignEnd="@id/home_imageview"
                    android:paddingTop="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="80dp"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Looks like a beautiful day to spot some bees!"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:paddingTop="@dimen/big_padding"
                android:textSize="16sp"
                android:textColor="#bdbdbd"
                android:text="Useful Links"/>
            <TextView
                android:id="@+id/visit_foe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:drawableEnd="@mipmap/follow_link_icon"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/visit_foe"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:background="@color/mediumGrey"/>
            <TextView
                android:id="@+id/learn_bee_cause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:drawableEnd="@mipmap/follow_link_icon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/learn_about_bee_cause" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:background="@color/mediumGrey"/>
            <TextView
                android:id="@+id/donate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:drawableEnd="@mipmap/follow_link_icon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/donate"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:drawableLeft="@mipmap/home_green_icon"
            android:drawablePadding="@dimen/small_padding"
            android:textColor="@color/grassGreen"
            android:id="@+id/buttonHome"/>
        <TextView
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:drawableLeft="@mipmap/submit_grey_icon"
            android:drawablePadding="@dimen/small_padding"
            android:gravity="center|center_vertical"
            android:textColor="@color/navBarTextGrey"
            android:text="@string/submit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@mipmap/lightbulb_grey_icon"
            android:drawablePadding="@dimen/small_padding"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:textColor="@color/navBarTextGrey"
            android:id="@+id/buttonLearn"/>
    </RelativeLayout>
    <View
        android:layout_above="@id/navBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/mediumGrey"/>
</RelativeLayout>
