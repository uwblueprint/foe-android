<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/review_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/grassGreen"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:padding="@dimen/small_padding"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/backButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/actionBarTextColour"
            android:gravity="center"
            android:text="@string/step_three"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textColor="@color/grassGreen"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/small_padding"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/submitButton"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/review_error_message"
        android:layout_below="@id/review_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:background="@color/errorRed"
        android:visibility="gone"
        android:textColor="@color/poppyRed"
        android:text="@string/geotag_error_message"/>
    <RelativeLayout
        android:id="@+id/review_species_identification"
        android:layout_below="@id/review_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/beeImageView"
            android:layout_width="@dimen/identified_species_image_height"
            android:layout_height="@dimen/identified_species_image_height"
            app:srcCompat="@drawable/speciesunknown"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/identified_species_image_height"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginStart="@dimen/big_padding"
            android:layout_marginBottom="@dimen/small_padding"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/beeImageView">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/identified_species_title"
                android:textColor="@color/subheadingTextColour"
                android:layout_marginBottom="@dimen/small_padding"/>
            <TextView
                android:id="@+id/englishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textColor="@color/darkGrey"
                android:text="@string/unidentified_species"/>
            <TextView
                android:id="@+id/latinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:text="@string/unidentified_species_latin_na"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/location_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_species_identification"
        android:paddingTop="@dimen/geotag_header_spacing"
        android:paddingBottom="@dimen/small_padding"
        android:paddingStart="@dimen/medium_padding"
        android:textColor="@color/subheadingTextColour"
        android:text="@string/location"/>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_below="@id/location_textview"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/medium_padding"
        card_view:cardElevation="0dp"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/small_padding"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/habitat_textview"
        android:layout_below="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/geotag_header_spacing"
        android:paddingBottom="@dimen/small_padding"
        android:textColor="@color/subheadingTextColour"
        android:text="@string/habitat"/>
    <Spinner
        android:id="@+id/habitat_spinner"
        android:layout_below="@id/habitat_textview"
        style="@style/SpinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding"/>
    <TextView
        android:id="@+id/weather_textview"
        android:layout_below="@id/habitat_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/geotag_header_spacing"
        android:paddingBottom="@dimen/small_padding"
        android:textColor="@color/subheadingTextColour"
        android:text="@string/weather"/>
    <Spinner
        android:id="@+id/weather_spinner"
        android:layout_below="@id/weather_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"/>
</RelativeLayout>