<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/actionBarTextColour"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:id="@+id/backButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/actionBarTextColour"
            android:gravity="center"
            android:text="@string/step_three"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textColor="@color/grassGreen"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:id="@+id/submitButton"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/speciesIdentification"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/beeImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/capture_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/beeImageView">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDENTIFIED SPECIES"
                android:textColor="@color/subheadingTextColour"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="Unidentified"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/subheadingTextColour"
                android:text="N/A"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/speciesIdentification"
        android:paddingTop="@dimen/geotag_header_spacing"
        android:paddingStart="@dimen/medium_padding"
        android:textColor="@color/subheadingTextColour"
        android:text="LOCATION"/>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_below="@id/locationTextView"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/medium_padding"
        card_view:cardElevation="0dp"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/small_padding"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/habitatTextview"
        android:layout_below="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/geotag_header_spacing"
        android:textColor="@color/subheadingTextColour"
        android:text="HABITAT"/>
    <Spinner
        android:id="@+id/habitat_spinner"
        android:layout_below="@id/habitatTextview"
        style="@style/SpinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding"/>
    <TextView
        android:id="@+id/weatherTextview"
        android:layout_below="@id/habitat_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/geotag_header_spacing"
        android:textColor="@color/subheadingTextColour"
        android:text="WEATHER"/>
    <Spinner
        android:id="@+id/weather_spinner"
        android:layout_below="@id/weatherTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"/>
</RelativeLayout>