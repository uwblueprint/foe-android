<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/learnActivityBackground"
    tools:context="com.blueprint.foe.beetracker.LearnActivity">
    <ListView
        android:id="@+id/factsListView"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/small_padding"/>
    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:drawableLeft="@mipmap/home_grey_icon"
            android:drawablePadding="@dimen/small_padding"
            android:textColor="@color/navBarTextGrey"
            android:id="@+id/buttonHome"/>
        <TextView
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:drawableLeft="@mipmap/submit_grey_icon"
            android:drawablePadding="@dimen/small_padding"
            android:gravity="center|center_vertical"
            android:textColor="@color/navBarTextGrey"
            android:text="@string/submit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@mipmap/lightbulb_green_icon"
            android:drawablePadding="@dimen/small_padding"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:textColor="@color/grassGreen"
            android:id="@+id/buttonLearn"/>
    </RelativeLayout>
    <View
        android:layout_above="@id/navBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/mediumGrey"/>
</RelativeLayout>
