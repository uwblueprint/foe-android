<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/factViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgFrame">

                <ImageView
                    android:id="@+id/imgSubmission"
                    android:src="@drawable/fact_illustation_general"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="261dp"
                    android:background="@color/mediumGrey"
                    android:layout_marginBottom="@dimen/medium_padding"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_shape"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imgFrame"
                android:layout_alignLeft="@id/imgFrame"
                android:textColor="@color/white"
                android:padding="@dimen/medium_padding"
                android:textSize="14sp"
                android:text="June 18"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imgFrame"
                android:layout_alignRight="@id/imgFrame"
                android:padding="@dimen/medium_padding"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Pending"/>
            <TextView
                android:id="@+id/tvSpecies"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="2dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_below="@id/imgFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Rusty-patched Bumble Bee" />
            <TextView
                android:id="@+id/tvLocation"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="14dp"
                android:textSize="14sp"
                android:layout_below="@id/tvSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#bdbdbd"
                android:text="Waterloo, ON" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
