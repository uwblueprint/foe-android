<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/small_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grassGreen"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:padding="@dimen/small_padding"
            android:id="@+id/backButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/actionBarTextColour"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/step_two"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="@color/grassGreen"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/small_padding"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/nextButton"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/greyBackground"
        android:id="@+id/previewImageView"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_bar"
        app:layout_constraintBottom_toTopOf="@+id/easternWestern"/>
    <android.support.v7.widget.CardView
        android:id="@+id/skipStepButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/darkGrey"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/previewImageView">
        <TextView
            android:text="@string/skip_step"
            android:textColor="@color/white"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/easternWestern"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:id="@+id/easternButton"
            android:textColor="@color/mediumDarkGrey"
            android:fontFamily="sans-serif-medium"
            android:text="@string/eastern"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/mediumDarkGrey"
            android:id="@+id/westernButton"
            android:text="@string/western"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/recyclerView"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>