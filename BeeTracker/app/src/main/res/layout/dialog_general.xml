<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/popup_image_width"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:src="@drawable/bee_image_popup"
        android:layout_width="@dimen/popup_image_width"
        android:layout_height="@dimen/popup_image_height"
        android:id="@+id/dialog_image"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/heading"
        android:layout_below="@id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="@dimen/big_padding"
        android:paddingStart="@dimen/big_padding"
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/popup_heading_text_size"/>
    <TextView
        android:id="@+id/paragraph"
        android:layout_below="@id/heading"
        android:paddingStart="@dimen/big_padding"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:text=""
        android:textSize="@dimen/popup_text_size"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/finish"
        android:layout_alignParentRight="true"
        android:layout_below="@id/paragraph"
        android:text="@string/finish"
        android:drawablePadding="@dimen/tiny_padding"
        android:gravity="end"
        android:textSize="@dimen/popup_text_size"
        android:textColor="@color/grassGreen"
        android:drawableEnd="@mipmap/icon_done_checkmark_popup"
        android:paddingEnd="@dimen/big_padding"
        android:paddingBottom="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding"
        android:paddingStart="@dimen/big_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
