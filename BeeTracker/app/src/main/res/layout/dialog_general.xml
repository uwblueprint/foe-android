<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="327dp"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:src="@drawable/bee_image_popup"
        android:layout_width="327dp"
        android:layout_height="241dp"
        android:id="@+id/dialog_image"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/heading"
        android:layout_below="@id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:text="Buzz Buzz!"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/paragraph"
        android:layout_below="@id/heading"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="(That's thank you in bee!)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/finish"
        android:layout_alignParentRight="true"
        android:layout_below="@id/paragraph"
        android:text="Finish"
        android:drawablePadding="4dp"
        android:gravity="end"
        android:textColor="@color/grassGreen"
        android:drawableLeft="@drawable/icon_done_popup"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
