<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.blueprint.foe.beetracker.MainActivity">
    <ImageView
        android:id="@+id/beeAppLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bee_app_logo"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/foe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/big_padding"
        android:layout_below="@id/beeAppLogo"
        android:textColor="@color/black"
        android:text="Friends of the Earth" />
    <TextView
        android:id="@+id/greatCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="The Great Canadian Bumble Bee Count"
        android:gravity="center_horizontal"
        android:layout_below="@id/foe"/>
    <android.support.v7.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/small_padding"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/greatCount"
        app:cardCornerRadius="24dp">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            facebook:com_facebook_login_text="Login with Facebook"
            facebook:paddingStart="54dp"
            facebook:paddingEnd="54dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:paddingRight="54dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_gravity="center_horizontal" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/medium_padding"
        android:layout_below="@id/loginCardView"
        android:textColor="@color/mediumDarkGrey"
        android:text="Continue as guest" />
</RelativeLayout>
